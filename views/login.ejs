<%- include("partials/header") -%>

<div class="container">
  <form action="/login" method="post" class="styled-form">
    <label for="email">Email</label>
    <input type="email" name="username" placeholder="Your Email" class="styled-input">
    <label for="password">Password</label>
    <input type="password" name="password" placeholder="Your Password" class="styled-input">
    <input type="submit" value="Login" class="styled-button">
    <a class="btn btn-block" href="/auth/google" role="button" style="background-color: #4285F4; color: #fff; text-align: center; padding: 10px; border-radius: 5px; text-decoration: none;">
  <i class="fab fa-google" style="margin-right: 5px;"></i>
  Sign In with Google
</a>
  </form>
</div>

<%- include("partials/footer") -%>


<style>

  .styled-form {
    padding: 20px;
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  .styled-input {
    width: 100%;
    padding: 10px;
    margin: 10px 0;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
  }

  .styled-input::placeholder {
    color: #999;
  }

  .styled-button {
    width: 100%;
    background-color: #252B48;
    color: white;
    padding: 12px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: bold;
  }

  .styled-button:hover {
    background-color: #4477CE;
  }

  .login-with-google-btn {
  transition: background-color .3s, box-shadow .3s;

  padding: 12px 16px 12px 42px;
  border: none;
  border-radius: 3px;
  box-shadow: 0 -1px 0 rgba(0, 0, 0, .04), 0 1px 1px rgba(0, 0, 0, .25);

  color: #757575;
  font-size: 14px;
  font-weight: 500;
  font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen,Ubuntu,Cantarell,"Fira Sans","Droid Sans","Helvetica Neue",sans-serif;

  &:hover {
    background-color: gold;
  }

  &:active {
    background-color: #eeeeee;
  }

  &:focus {
    outline: none;
    box-shadow:
      0 -1px 0 rgba(0, 0, 0, .04),
      0 2px 4px rgba(0, 0, 0, .25),
      0 0 0 3px #c8dafc;
  }
</style>
