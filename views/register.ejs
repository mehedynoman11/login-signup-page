<%- include("partials/header") -%>
<div class="container">
  <form action="/register" method="post" class="styled-form">
  <label for="email">Email</label>
  <input type="text" name="username" placeholder="Your Email" class="styled-input">
  <input type="password" name="password" placeholder="Your Password" class="styled-input">
  <input type="submit" value="Register" class="styled-button">
  <button type="button" class="login-with-google-btn" onclick="window.location.href='/auth/google'" >
  Sign in with Google
</button>
</form>
</div>

<%- include("partials/footer") -%>


<style>
  .google-signin-button {
    display: inline-block;
    background-color: #fff;
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 8px 12px;
    font-size: 16px;
    cursor: pointer;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    transition: background-color 0.2s, border-color 0.2s;
  }

  .google-signin-button:hover {
    background-color: #f1f1f1;
    border-color: #999;
  }

  body {
    font-family: Arial, sans-serif;
    background-color: #f0f0f0;
  }

  .styled-form {
    padding: 20px;
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  .styled-input {
    width: 100%;
    padding: 10px;
    margin: 10px 0;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
  }

  .styled-input::placeholder {
    color: #999;
  }

  .styled-button {
    width: 100%;
    background-color: #4caf50;
    color: white;
    padding: 12px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: bold;
  }

  .styled-button:hover {
    background-color: #45a049;
  }

  .login-with-google-btn {
  transition: background-color .3s, box-shadow .3s;

  padding: 12px 16px 12px 42px;
  border: none;
  border-radius: 3px;
  box-shadow: 0 -1px 0 rgba(0, 0, 0, .04), 0 1px 1px rgba(0, 0, 0, .25);

  color: #757575;
  font-size: 14px;
  font-weight: 500;
  font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen,Ubuntu,Cantarell,"Fira Sans","Droid Sans","Helvetica Neue",sans-serif;

  background-image: url(data:image/svg+xml;base64,);
  background-color: white;
  background-repeat: no-repeat;
  background-position: 12px 11px;

  &:hover {
    box-shadow: 0 -1px 0 rgba(0, 0, 0, .04), 0 2px 4px rgba(0, 0, 0, .25);
  }

  &:active {
    background-color: #eeeeee;
  }

  &:focus {
    outline: none;
    box-shadow:
      0 -1px 0 rgba(0, 0, 0, .04),
      0 2px 4px rgba(0, 0, 0, .25),
      0 0 0 3px #c8dafc;
  }
</style>
